server{                                                                         
    listen 80 ;                                                                 
    server_name .+;                                                             
                                                                                
    location ^~ /uploads/ {                                                     
                        alias /home/box/web/uploads/;                           
                        }                                                       
                                                                                
    location ~* .*\.[a-zA-Z0-9_]+$ {                                           
                        root  /home/box/web/public;                              
                        }                                                       
                                                                                
                                                                                
    location / {                                                                
                        return 404;                                             
    } 
    

    location ^~ /hello/ {
        proxy_pass http://127.0.0.1:8080/;
    }

    location / {
        proxy_pass http://127.0.0.1:8000/;
    }
    
}                                                                               
   
